@model SPCreateVM

<h2>
    Log Service for:
    <a asp-controller="Vehicle" asp-action="Details" asp-route-id="@Model.Vehicle.Id">
        @Model.Vehicle.Make @Model.Vehicle.Model
    </a>
</h2>
<h3>
    <a asp-controller="Customer" asp-action="Details" asp-route-id="@Model.Customer.Id">
        @Model.Customer.FirstName @Model.Customer.LastName
    </a>
</h3>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <input asp-for="VehicleId" hidden />
            <input asp-for="CustomerId" hidden />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TechnicianId" class="control-label"></label>
                <select asp-for="TechnicianId" class="form-control" asp-items="@Model.TechnicianList"></select>
            </div>
            <div class="form-group">
                <label asp-for="ServiceStatusId" class="control-label"></label>
                <select asp-for="ServiceStatusId" class="form-control" asp-items="@Model.ServiceStatusList"></select>
            </div>
            <div class="form-group">
                <label asp-for="TimePerformed" class="control-label"></label>
                <input asp-for="TimePerformed" class="form-control" />
                <span asp-validation-for="TimePerformed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea rows="5" cols="50" asp-for="Notes" class="form-control" ></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
